{
  "name": "snuze_server",
  "version": "1.0.0",
  "description": "Server back-end for snuze_app",
  "main": "index.js",
  "scripts": {
    "test": "npm test",
    "lint": "eslint src/functions",
    "func:serve": "sudo firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "func:watch": "npx babel src/functions --watch --out-dir dist/functions",
    "func:install": "cd dist/functions && npm i",
    "func:deploy": "firebase deploy --only functions",
    "func:predeploy": "npm run func:clean && npm run func:build && npm run func:copy",
    "logs": "firebase functions:log",
    "func:clean": "rimraf dist/functions",
    "func:build": "babel src/functions --out-dir dist/functions",
    "func:copy": "cp '.env' dist/functions && cp 'package.json' dist/functions && npm run func:install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theTaoTeam/snuze_server.git"
  },
  "author": "Tao Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/theTaoTeam/snuze_server/issues"
  },
  "dependencies": {
    "dotenv": "^6.1.0",
    "firebase-admin": "~6.0.0",
    "firebase-functions": "^2.1.0",
    "moment": "^2.22.2",
    "stripe": "^6.14.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "5.10.0",
    "eslint-plugin-promise": "^3.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "homepage": "https://github.com/theTaoTeam/snuze_server#readme"
}
